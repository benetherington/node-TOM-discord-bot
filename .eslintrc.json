{
    "extends": "eslint:recommended",
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "browser": true
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "tabWidth": 4,
                "printWidth": 80,
                "singleQuote": true,
                "trailingComma": "all",
                "bracketSpacing": false,
                "jsxBracketSameLine": true
            }
        ]
    }
}
